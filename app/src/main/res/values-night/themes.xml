<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.InfoIoT" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="background"><item name="android:background">@color/black</item></style>
    <style name="cardBackground"><item name="android:background">@color/darkGrey</item></style>
    <style name="toolbarBackground"><item name="android:background">#1C1C1C</item></style>
    <style name="toolbarLine"><item name="android:background">#3D3D3D</item></style>

    <style name="title">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="description">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>
</resources>

