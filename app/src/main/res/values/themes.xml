<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.InfoIoT" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.InfoIoT" parent="Base.Theme.InfoIoT" />

    <style name="background"><item name="android:background">@color/whitePlus</item></style>
    <style name="cardBackground"><item name="android:background">@color/white</item></style>

    <style name="title">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="description">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>

</resources>